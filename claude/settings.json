{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "permissions": {
    "allow": [
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Bash(npm run build)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Read(~/.zshrc)",
      "Bash(npm run dev:*)",
      "Bash(npm run watch:*)",
      "Bash(npm run typecheck:*)",
      "Bash(npm run format:*)",
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git pull:*)",
      "Bash(npm install:*)",
      "Bash(npm update:*)",
      "Bash(yarn:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(ps:*)",
      "Bash(df:*)",
      "Bash(sequential-thinking:*)",
      "Bash(gh issue view:*)",
      "Bash(npx ccusage@latest)",
      "Fetch(*)",
      "WebFetch(domain:docs.anthropic.com)",
      "mcp__sequential-thinking__mcp__basic-memory__search_notes",
      "mcp__sequential-thinking__sequentialthinking_tools",
      "mcp__youtube-transcript__get_transcript"
    ],
    "deny": [
      "Bash(curl:*)",
      "Bash(rm:*)",
      "Bash(git reset --hard:*)",
      "Bash(git clean -fd:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git branch -D:*)",
      "Bash(git rebase -i:*)",
      "Bash(git filter-branch:*)",
      "Bash(git reflog expire:*)",
      "Bash(git gc --prune=now:*)",
      "Bash(git remote rm:*)",
      "Bash(git remote remove:*)"
    ]
  },
  "model": "opus",
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Hero.aiff"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "/Users/miyagawaryouta/dotFiles/claude/config/statusline.sh"
  },
  "enabledPlugins": {
    "typescript-lsp@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true,
  "mcpServers": {
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    }
  },
  "feedbackSurveyState": {
    "lastShownTime": 1754018660214
  },
  "lsp": {
    "enabled": true
  }
}
