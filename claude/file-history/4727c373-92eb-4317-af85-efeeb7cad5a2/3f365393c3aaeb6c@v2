import { MicrophoneButton } from './MicrophoneButton';
import { CameraButton } from './CameraButton';
import './VideoControls.scss';

/**
 * VideoControls Props
 */
interface VideoControlsProps {
  isMicOn: boolean;
  isCameraOn: boolean;
  onToggleMic: () => void;
  onToggleCamera: () => void;
  disabled?: boolean;
}

/**
 * VideoControls
 * コントロールバーコンポーネント
 */
export const VideoControls = ({
  isMicOn,
  isCameraOn,
  onToggleMic,
  onToggleCamera,
  disabled = false,
}: VideoControlsProps) => {
  return (
    <div className="video-controls">
      <MicrophoneButton
        isMuted={!isMicOn}
        onClick={onToggleMic}
        disabled={disabled}
      />
      <CameraButton
        isOff={!isCameraOn}
        onClick={onToggleCamera}
        disabled={disabled}
      />
    </div>
  );
};
