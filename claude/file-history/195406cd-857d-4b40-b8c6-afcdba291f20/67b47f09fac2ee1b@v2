import type { SiteDevice } from '@/entities/index.js';

export interface ISiteDeviceRepository {
  findBySiteId(siteId: string): Promise<SiteDevice | null>;
  create(input: {
    siteId: string;
    deviceId: string;
    deviceName: string | null;
  }): Promise<SiteDevice>;
  updateLastAccessedAt(id: string): Promise<void>;
  delete(id: string): Promise<void>;
  deleteBySiteId(siteId: string): Promise<void>;
}
