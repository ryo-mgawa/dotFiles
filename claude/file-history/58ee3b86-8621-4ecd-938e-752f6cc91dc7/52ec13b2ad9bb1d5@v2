import type { Company, CreateCompanyInput } from '@/entities/index.js';
import type { ICompanyRepository } from './ICompanyRepository.js';
import { prisma } from '../prisma/client.js';

export class CompanyRepository implements ICompanyRepository {
  async findById(id: string): Promise<Company | null> {
    const company = await prisma.company.findFirst({
      where: { id, deletedAt: null },
    });

    if (!company) return null;

    return this.mapToEntity(company);
  }

  async findAll(): Promise<Company[]> {
    const companies = await prisma.company.findMany({
      where: { deletedAt: null },
    });

    return companies.map((company) => this.mapToEntity(company));
  }

  async create(input: CreateCompanyInput): Promise<Company> {
    const company = await prisma.company.create({
      data: {
        name: input.name,
        timezone: input.timezone ?? 'Asia/Tokyo',
      },
    });

    return this.mapToEntity(company);
  }

  async update(id: string, data: Partial<Company>): Promise<Company> {
    const company = await prisma.company.update({
      where: { id },
      data,
    });

    return this.mapToEntity(company);
  }

  async softDelete(id: string): Promise<void> {
    await prisma.company.update({
      where: { id },
      data: { deletedAt: new Date() },
    });
  }

  private mapToEntity(company: {
    id: string;
    name: string;
    timezone: string;
    createdAt: Date;
    updatedAt: Date;
    deletedAt: Date | null;
  }): Company {
    return {
      id: company.id,
      name: company.name,
      timezone: company.timezone,
      createdAt: company.createdAt,
      updatedAt: company.updatedAt,
      deletedAt: company.deletedAt,
    };
  }
}
