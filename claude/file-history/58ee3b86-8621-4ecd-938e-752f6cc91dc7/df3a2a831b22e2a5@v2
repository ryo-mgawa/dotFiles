export type SessionStatus = 'active' | 'ended';

export interface Session {
  id: string;
  companyId: string;
  topic: string;
  status: SessionStatus;
  startedAt: Date;
  endedAt: Date | null;
  createdAt: Date;
}

export interface CreateSessionInput {
  companyId: string;
  topic: string;
}

export interface SessionParticipant {
  id: string;
  sessionId: string;
  siteId: string;
  userId: string | null;
  joinedAt: Date;
  leftAt: Date | null;
}
