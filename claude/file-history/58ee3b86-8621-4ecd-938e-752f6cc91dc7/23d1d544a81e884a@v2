export interface User {
  id: string;
  companyId: string;
  siteId: string;
  email: string;
  passwordHash: string;
  name: string;
  role: 'admin' | 'user';
  createdAt: Date;
  updatedAt: Date;
  deletedAt: Date | null;
}

export type UserWithoutPassword = Omit<User, 'passwordHash'>;

export interface CreateUserInput {
  companyId: string;
  siteId: string;
  email: string;
  passwordHash: string;
  name: string;
  role: 'admin' | 'user';
}
