import { Type } from 'class-transformer';
import {
  IsDefined,
  IsISO8601,
  IsLatitude,
  IsLongitude,
  IsOptional,
  IsString,
  ValidateNested,
} from 'class-validator';

export class Geocode {
  @IsDefined()
  @IsLatitude()
  public latitude: number;

  @IsDefined()
  @IsLongitude()
  public longitude: number;
}

export class AddShipmentEventItem {
  @IsDefined()
  @IsString()
  public shipmentId: string;

  @IsDefined()
  @IsString()
  public type: string;

  @IsDefined()
  @IsString()
  public originalSpotId: string;

  @IsOptional()
  @ValidateNested()
  @Type(() => Geocode)
  public geocode?: Geocode;

  @IsDefined()
  @IsISO8601()
  public executedAt: string;
}
