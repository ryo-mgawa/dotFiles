import { Module } from '@nestjs/common';
import { ConfigModule } from '@nestjs/config';
import { AdminClientFirebaseFactory } from './factories/adminClientFirebaseFactory';
import { AutomationFirestoreFactory } from './factories/automationFirestoreFactory';
import { DriverClientFirebaseFactory } from './factories/driverClientFirebaseFactory';
import { FeatureFlagRTDBFactory } from './factories/featureFlagRTDBFactory/featureFlagRTDBFactory';
import { FirebaseNotificationAdminFactory } from './factories/firebaseNotificationAdminFactory';
import { ManagerClientFirebaseFactory } from './factories/managerClientFirebaseFactory';
import { NotificationCustomTokenFirebaseAdminFactory } from './factories/notificationCustomTokenFirebaseAdminFactory';
import { UpdatedCourseInfoService } from './service/updatedCourseInfoService';

@Module({
  imports: [ConfigModule.forRoot()],
  providers: [
    FirebaseNotificationAdminFactory,
    FeatureFlagRTDBFactory,
    NotificationCustomTokenFirebaseAdminFactory,
    AdminClientFirebaseFactory,
    ManagerClientFirebaseFactory,
    DriverClientFirebaseFactory,
    AutomationFirestoreFactory,
    UpdatedCourseInfoService
  ],
  exports: [
    FirebaseNotificationAdminFactory,
    FeatureFlagRTDBFactory,
    NotificationCustomTokenFirebaseAdminFactory,
    AdminClientFirebaseFactory,
    ManagerClientFirebaseFactory,
    DriverClientFirebaseFactory,
    AutomationFirestoreFactory,
    UpdatedCourseInfoService
  ],
})
export class FirebaseAdminModule { }
