import { Router } from 'express';
import { authRoutes } from '@/features/auth/index.js';
import { siteRoutes } from '@/features/sites/index.js';

const router = Router();

router.get('/health', (_req, res) => {
  res.json({ status: 'ok' });
});

router.use('/auth', authRoutes);
router.use('/sites', siteRoutes);

export { router };
