import {
  createContext,
  useReducer,
  useEffect,
  useCallback,
  useMemo,
  type ReactNode,
} from 'react';
import { apiClient } from '@/shared/lib/apiClient';
import { authApi } from '../api/authApi';
import type { AuthState, AuthAction, LoginCredentials } from '../types';

const TOKEN_STORAGE_KEY = 'auth_token';
const SITE_TOKEN_STORAGE_KEY = 'site_token';
const DEVICE_ID_STORAGE_KEY = 'device_id';

const getDeviceName = (): string => {
  const ua = navigator.userAgent;
  const browser = ua.includes('Chrome') ? 'Chrome' : ua.includes('Firefox') ? 'Firefox' : ua.includes('Safari') ? 'Safari' : 'Unknown';
  const os = ua.includes('Windows') ? 'Windows' : ua.includes('Mac') ? 'Mac' : ua.includes('Linux') ? 'Linux' : 'Unknown';
  return `${browser} on ${os}`;
};

const initialState: AuthState = {
  isAuthenticated: false,
  authType: null,
  user: null,
  site: null,
  company: null,
  token: null,
  zoomSessionName: null,
  zoomToken: null,
  loading: true,
  error: null,
};

const authReducer = (state: AuthState, action: AuthAction): AuthState => {
  switch (action.type) {
    case 'LOGIN_START':
      return { ...state, loading: true, error: null };
    case 'LOGIN_SUCCESS':
      return {
        ...state,
        isAuthenticated: true,
        authType: 'user',
        user: action.payload.user,
        company: action.payload.company,
        token: action.payload.token,
        loading: false,
        error: null,
      };
    case 'LOGIN_FAILURE':
      return {
        ...state,
        isAuthenticated: false,
        authType: null,
        user: null,
        site: null,
        company: null,
        token: null,
        zoomSessionName: null,
        zoomToken: null,
        loading: false,
        error: action.payload,
      };
    case 'LOGOUT':
      return {
        ...initialState,
        loading: false,
      };
    case 'RESTORE_SESSION':
      return {
        ...state,
        isAuthenticated: true,
        authType: 'user',
        user: action.payload.user,
        company: action.payload.company,
        token: action.payload.token,
        loading: false,
      };
    case 'SITE_AUTH_SUCCESS':
      return {
        ...state,
        isAuthenticated: true,
        authType: 'site',
        site: action.payload.site,
        company: action.payload.company,
        token: action.payload.token,
        zoomSessionName: action.payload.zoomSessionName,
        zoomToken: action.payload.zoomToken,
        loading: false,
        error: null,
      };
    case 'CLEAR_ERROR':
      return { ...state, error: null };
    default:
      return state;
  }
};

interface AuthContextValue {
  state: AuthState;
  login: (credentials: LoginCredentials) => Promise<void>;
  authenticateBySiteToken: (siteToken: string) => Promise<void>;
  logout: () => void;
  clearError: () => void;
}

export const AuthContext = createContext<AuthContextValue | null>(null);

interface AuthProviderProps {
  children: ReactNode;
}

export const AuthProvider = ({ children }: AuthProviderProps) => {
  const [state, dispatch] = useReducer(authReducer, initialState);

  // セッション復元
  useEffect(() => {
    const restoreSession = async () => {
      const storedToken = localStorage.getItem(TOKEN_STORAGE_KEY);

      if (!storedToken) {
        dispatch({ type: 'LOGOUT' });
        return;
      }

      apiClient.setToken(storedToken);

      try {
        const { user, company } = await authApi.getCurrentUser();
        dispatch({
          type: 'RESTORE_SESSION',
          payload: { user, company, token: storedToken },
        });
      } catch {
        localStorage.removeItem(TOKEN_STORAGE_KEY);
        apiClient.setToken(null);
        dispatch({ type: 'LOGOUT' });
      }
    };

    restoreSession();
  }, []);

  const login = useCallback(async (credentials: LoginCredentials) => {
    dispatch({ type: 'LOGIN_START' });

    try {
      const { user, company, accessToken } = await authApi.login(credentials);

      localStorage.setItem(TOKEN_STORAGE_KEY, accessToken);
      apiClient.setToken(accessToken);

      dispatch({
        type: 'LOGIN_SUCCESS',
        payload: { user, company, token: accessToken },
      });
    } catch (error) {
      const message = error instanceof Error ? error.message : 'ログインに失敗しました';
      dispatch({ type: 'LOGIN_FAILURE', payload: message });
      throw error;
    }
  }, []);

  const authenticateBySiteToken = useCallback(async (siteToken: string) => {
    dispatch({ type: 'LOGIN_START' });

    try {
      // ローカルストレージからデバイスIDを取得
      const storedDeviceId = localStorage.getItem(DEVICE_ID_STORAGE_KEY);
      const deviceName = getDeviceName();

      const { site, company, accessToken, zoomSessionName, zoomToken, deviceId } =
        await authApi.authenticateBySiteToken({
          siteToken,
          deviceId: storedDeviceId,
          deviceName,
        });

      // デバイスIDをローカルストレージに保存
      localStorage.setItem(DEVICE_ID_STORAGE_KEY, deviceId);
      localStorage.setItem(SITE_TOKEN_STORAGE_KEY, siteToken);
      localStorage.setItem(TOKEN_STORAGE_KEY, accessToken);
      apiClient.setToken(accessToken);

      dispatch({
        type: 'SITE_AUTH_SUCCESS',
        payload: { site, company, token: accessToken, zoomSessionName, zoomToken },
      });
    } catch (error) {
      const message = error instanceof Error ? error.message : '拠点認証に失敗しました';
      dispatch({ type: 'LOGIN_FAILURE', payload: message });
      throw error;
    }
  }, []);

  const logout = useCallback(() => {
    localStorage.removeItem(TOKEN_STORAGE_KEY);
    localStorage.removeItem(SITE_TOKEN_STORAGE_KEY);
    apiClient.setToken(null);
    dispatch({ type: 'LOGOUT' });
  }, []);

  const clearError = useCallback(() => {
    dispatch({ type: 'CLEAR_ERROR' });
  }, []);

  const value = useMemo(
    () => ({ state, login, authenticateBySiteToken, logout, clearError }),
    [state, login, authenticateBySiteToken, logout, clearError]
  );

  return <AuthContext.Provider value={value}>{children}</AuthContext.Provider>;
};
