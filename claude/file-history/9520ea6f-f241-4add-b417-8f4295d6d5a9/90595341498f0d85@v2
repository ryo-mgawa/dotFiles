import { Router } from 'express';
import { ActivitiesController } from '../controllers/ActivitiesController';
import { GetActivityListUseCase } from '../../application/usecases/activities/GetActivityListUseCase';
import { activityRepository } from '../../config/dependencies';

const router = Router();

const getActivityListUseCase = new GetActivityListUseCase(activityRepository);
const activitiesController = new ActivitiesController(getActivityListUseCase);

/**
 * GET /api/activities
 * 活動時間一覧を取得
 */
router.get('/', (req, res, next) => activitiesController.getActivities(req, res, next));

export default router;
