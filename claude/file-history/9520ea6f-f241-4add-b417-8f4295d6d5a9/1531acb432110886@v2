import { Request, Response, NextFunction } from 'express';
import { GetActivityListUseCase } from '../../application/usecases/activities/GetActivityListUseCase';

/**
 * 活動情報コントローラー
 */
export class ActivitiesController {
  constructor(private readonly getActivityListUseCase: GetActivityListUseCase) {}

  /**
   * GET /api/activities
   * 活動時間一覧を取得
   */
  async getActivities(_req: Request, res: Response, next: NextFunction): Promise<void> {
    try {
      const activities = await this.getActivityListUseCase.execute();

      res.status(200).json({
        success: true,
        data: activities,
      });
    } catch (error) {
      next(error);
    }
  }
}
