import { DepartmentCode } from '../constants/departments';
import { BlockValue } from '../constants/blocks';
import { GenderCode } from '../constants/events';

/**
 * 部員エンティティ型
 */
export interface Member {
  id: string;
  studentNumber: string;
  lastNameKanji: string;
  firstNameKanji: string;
  lastNameKana: string;
  firstNameKana: string;
  lastNameEn: string;
  firstNameEn: string;
  enrollmentYear: number;
  graduationYear: number | null;
  department: DepartmentCode;
  block: BlockValue;
  isActive: boolean;
  createdAt: Date;
  updatedAt: Date;
}

/**
 * 大会エンティティ型
 */
export interface Competition {
  id: string;
  name: string;
  location: string;
  date: Date;
  year: number;
  createdAt: Date;
  updatedAt: Date;
}

/**
 * 記録エンティティ型
 */
export interface Record {
  id: string;
  competitionId: string;
  memberId: string;
  gradeAtRecord: number;
  departmentAtRecord: DepartmentCode;
  event: string;
  gender: GenderCode;
  result: number;
  wind: number | null;
  note: string | null;
  relayTeamId: string | null;
  relayOrder: number | null;
  createdAt: Date;
  updatedAt: Date;
}

/**
 * 顧問エンティティ型
 */
export interface Advisor {
  id: string;
  name: string;
  isActive: boolean;
  createdAt: Date;
  updatedAt: Date;
}

/**
 * 活動情報エンティティ型
 */
export interface Activity {
  id: string;
  dayOfWeek: number; // 0:日曜 〜 6:土曜
  startTime: string; // "HH:mm" format
  endTime: string; // "HH:mm" format
  createdAt: Date;
  updatedAt: Date;
}
