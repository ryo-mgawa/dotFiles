/**
 * 学科定数
 * M: 機械工学科
 * E: 電気・電子システム工学科
 * I: 情報工学科
 * C: 環境都市工学科
 * A: 建築学科
 */
export const DEPARTMENTS = {
  M: '機械工学科',
  E: '電気・電子システム工学科',
  I: '情報工学科',
  C: '環境都市工学科',
  A: '建築学科',
} as const;

export type DepartmentCode = keyof typeof DEPARTMENTS;

export const DEPARTMENT_CODES: DepartmentCode[] = ['M', 'E', 'I', 'C', 'A'];

/**
 * 学科コードの優先順位（ソート用）
 */
export const DEPARTMENT_ORDER: Record<DepartmentCode, number> = {
  M: 1,
  E: 2,
  I: 3,
  C: 4,
  A: 5,
};
