import apiClient from './apiClient';
import { Advisor } from '@/types/models/Advisor';

interface ApiResponse<T> {
  success: boolean;
  data: T;
}

/**
 * 顧問一覧を取得
 */
export const getAdvisors = async (): Promise<Advisor[]> => {
  const response = await apiClient.get<ApiResponse<Advisor[]>>('/advisors');
  return response.data.data;
};
