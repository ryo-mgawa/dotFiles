import { Card } from 'react-bootstrap';
import { Competition } from '@/types/models/Competition';

interface CompetitionListProps {
  competitions: Competition[];
}

/**
 * 大会一覧
 * requirements.md 2.4節を参照
 */
export const CompetitionList = ({ competitions }: CompetitionListProps) => {
  const formatDate = (dateString: string) => {
    const date = new Date(dateString);
    return date.toLocaleDateString('ja-JP', {
      year: 'numeric',
      month: 'long',
      day: 'numeric',
    });
  };

  return (
    <div>
      {competitions.map((competition) => (
        <Card key={competition.id} className="mb-3">
          <Card.Header>
            <h5>{competition.name}</h5>
          </Card.Header>
          <Card.Body>
            <p>
              <strong>開催場所:</strong> {competition.location}
            </p>
            <p>
              <strong>開催日:</strong> {formatDate(competition.date)}
            </p>
          </Card.Body>
        </Card>
      ))}
    </div>
  );
};
