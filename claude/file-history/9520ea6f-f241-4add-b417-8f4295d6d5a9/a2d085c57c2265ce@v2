import { DepartmentCode } from '../../shared/constants/departments';
import { BlockValue } from '../../shared/constants/blocks';

/**
 * 部員DTO（レスポンス用）
 * フロントエンドに返却するデータ形式
 */
export interface MemberDto {
  id: string;
  studentNumber: string;
  lastNameKanji: string;
  firstNameKanji: string;
  lastNameKana: string;
  firstNameKana: string;
  lastNameEn: string;
  firstNameEn: string;
  grade: number; // 動的に計算された学年
  enrollmentYear: number;
  graduationYear: number | null;
  department: DepartmentCode;
  departmentName: string; // 学科名（表示用）
  block: BlockValue;
  isActive: boolean;
}

/**
 * 部員作成リクエストDTO
 */
export interface CreateMemberDto {
  studentNumber: string;
  lastNameKanji: string;
  firstNameKanji: string;
  lastNameKana: string;
  firstNameKana: string;
  lastNameEn: string;
  firstNameEn: string;
  enrollmentYear: number;
  graduationYear?: number | null;
  department: DepartmentCode;
  block: BlockValue;
}

/**
 * 部員更新リクエストDTO
 */
export interface UpdateMemberDto {
  lastNameKanji?: string;
  firstNameKanji?: string;
  lastNameKana?: string;
  firstNameKana?: string;
  lastNameEn?: string;
  firstNameEn?: string;
  graduationYear?: number | null;
  department?: DepartmentCode;
  block?: BlockValue;
  isActive?: boolean;
}
