import { BrowserRouter, Routes, Route } from 'react-router';
import { Header } from '@/components/common/Header';
import { HomePage } from '@/pages/HomePage';
import { MembersPage } from '@/pages/MembersPage';
import { AdvisorsPage } from '@/pages/AdvisorsPage';
import { CompetitionsPage } from '@/pages/CompetitionsPage';
import { AllTimeRecordsPage } from '@/pages/AllTimeRecordsPage';
import { PersonalRecordsPage } from '@/pages/PersonalRecordsPage';
import { ROUTES } from '@/constants/routes';
import 'bootstrap/dist/css/bootstrap.min.css';

function App() {
  return (
    <BrowserRouter>
      <Header />
      <Routes>
        <Route path={ROUTES.HOME} element={<HomePage />} />
        <Route path={ROUTES.MEMBERS} element={<MembersPage />} />
        <Route path={ROUTES.ADVISORS} element={<AdvisorsPage />} />
        <Route path={ROUTES.COMPETITIONS} element={<CompetitionsPage />} />
        <Route path={ROUTES.ALL_TIME_RECORDS} element={<AllTimeRecordsPage />} />
        <Route path={ROUTES.PERSONAL_RECORDS} element={<PersonalRecordsPage />} />
      </Routes>
    </BrowserRouter>
  );
}

export default App;
