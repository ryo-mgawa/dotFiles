import { v4 as uuidv4 } from 'uuid';
import { ICompetitionRepository } from '../../domain/repositories/ICompetitionRepository';
import { Competition } from '../../shared/types';
import { NotFoundError } from '../../shared/errors/AppError';
import { mockCompetitions } from './data';

/**
 * 大会モックリポジトリ
 */
export class MockCompetitionRepository implements ICompetitionRepository {
  private competitions: Competition[] = [...mockCompetitions];

  async findAll(): Promise<Competition[]> {
    // 日付降順でソート
    return [...this.competitions].sort((a, b) => b.date.getTime() - a.date.getTime());
  }

  async findByYear(year: number): Promise<Competition[]> {
    return this.competitions
      .filter((c) => c.year === year)
      .sort((a, b) => b.date.getTime() - a.date.getTime());
  }

  async findById(id: string): Promise<Competition | null> {
    const competition = this.competitions.find((c) => c.id === id);
    return competition || null;
  }

  async create(
    data: Omit<Competition, 'id' | 'createdAt' | 'updatedAt'>
  ): Promise<Competition> {
    const now = new Date();
    const newCompetition: Competition = {
      ...data,
      id: uuidv4(),
      createdAt: now,
      updatedAt: now,
    };
    this.competitions.push(newCompetition);
    return newCompetition;
  }

  async update(id: string, data: Partial<Competition>): Promise<Competition> {
    const index = this.competitions.findIndex((c) => c.id === id);
    if (index === -1) {
      throw new NotFoundError('Competition');
    }

    const updatedCompetition: Competition = {
      ...this.competitions[index],
      ...data,
      id: this.competitions[index].id,
      updatedAt: new Date(),
    };
    this.competitions[index] = updatedCompetition;
    return updatedCompetition;
  }

  async delete(id: string): Promise<void> {
    const index = this.competitions.findIndex((c) => c.id === id);
    if (index === -1) {
      throw new NotFoundError('Competition');
    }

    this.competitions.splice(index, 1);
  }
}
