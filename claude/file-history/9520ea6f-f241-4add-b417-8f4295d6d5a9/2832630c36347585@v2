import { Request, Response, NextFunction } from 'express';
import { GetAdvisorListUseCase } from '../../application/usecases/advisors/GetAdvisorListUseCase';

/**
 * 顧問コントローラー
 */
export class AdvisorsController {
  constructor(private readonly getAdvisorListUseCase: GetAdvisorListUseCase) {}

  /**
   * GET /api/advisors
   * 現職顧問一覧を取得
   */
  async getAdvisors(_req: Request, res: Response, next: NextFunction): Promise<void> {
    try {
      const advisors = await this.getAdvisorListUseCase.execute();

      res.status(200).json({
        success: true,
        data: advisors,
      });
    } catch (error) {
      next(error);
    }
  }
}
