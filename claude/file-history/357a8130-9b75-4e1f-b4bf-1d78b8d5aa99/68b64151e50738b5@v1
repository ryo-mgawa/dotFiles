import { resolve } from 'path';
import { ProviderIdentity, RDBModule, ShipmentDAO } from '@app/rdb';
import { INestApplication } from '@nestjs/common';
import { Test } from '@nestjs/testing';
import { Knex } from 'knex';
import { ShipmentConflictException } from '../../../exception/shipmentConflictException';
import { ShipmentSaveException } from '../../../exception/shipmentSaveException';
import { ShipmentConverter } from '../../converter/shipmentConverter';
import { ShipmentRepository } from '../shipmentRepository';

jest.mock('@app/requestContext/requestContext', () => {
  return {
    RequestContext: class DummyRequestContext {
      public static get() {
        return {
          user: {
            organizationId: 'test-org-1',
            userId: 'test-user-1',
            role: 'manager',
          },
        };
      }
      public static start(_, next) {
        next();
      }
    },
  };
});

describe('ShipmentRepository', () => {
  let shipmentRepository: ShipmentRepository;
  let app: INestApplication;
  let rdb: Knex;

  beforeEach(async () => {
    const moduleRef = await Test.createTestingModule({
      imports: [RDBModule],
      providers: [ShipmentDAO, ShipmentConverter, ShipmentRepository],
    }).compile();

    rdb = await moduleRef.get<Knex>(ProviderIdentity);
    app = moduleRef.createNestApplication();

    await Promise.all([
      app.init(),
      rdb.transaction(async (trx) => {
        await trx.raw('SET CONSTRAINTS ALL DEFERRED');
        await trx.seed.run({
          directory: resolve(__dirname, './fixtures/seeds'),
          specific: 'shipment.ts',
        });
        await trx.raw('SET CONSTRAINTS ALL IMMEDIATE');
      }),
    ]);

    shipmentRepository = await moduleRef.get<ShipmentRepository>(
      ShipmentRepository
    );
  });

  describe('save', () => {
    it('複数のshipmentを保存できる', async () => {
      const shipments = [
        {
          id: 'shipment-001',
          slipId: 'slip-001',
          consignor: { id: 'consignor-1', name: '発荷主A' },
          consignee: { id: 'consignee-1', name: '着荷主A' },
          originSpotId: 'spot-origin-1',
          destinationSpotId: 'spot-dest-1',
          meta: { note: 'テスト' },
        },
        {
          id: 'shipment-002',
          slipId: 'slip-002',
          consignor: { id: 'consignor-2', name: '発荷主B' },
          consignee: { id: 'consignee-2', name: '着荷主B' },
          originSpotId: 'spot-origin-2',
          destinationSpotId: 'spot-dest-2',
        },
      ];

      await shipmentRepository.save('test-org-1', shipments);

      const results = await rdb
        .from('shipment')
        .where('organization_id', 'test-org-1')
        .orderBy('slip_id', 'asc');

      expect(results).toHaveLength(2);
      expect(results[0].id).toBe('shipment-001');
      expect(results[0].organization_id).toBe('test-org-1');
      expect(results[0].slip_id).toBe('slip-001');
      expect(results[0].consignor).toEqual({
        id: 'consignor-1',
        name: '発荷主A',
      });
      expect(results[1].id).toBe('shipment-002');
      expect(results[1].slip_id).toBe('slip-002');
      expect(results[1].meta).toBeNull();
    });

    it('空配列の場合は何もしない', async () => {
      await shipmentRepository.save('test-org-1', []);

      const results = await rdb.from('shipment');
      expect(results).toHaveLength(0);
    });

    it('IDがコンフリクトした場合はShipmentConflictExceptionをスローする', async () => {
      const shipmentId = 'shipment-duplicate-001';

      // 最初の保存
      await shipmentRepository.save('test-org-1', [
        {
          id: shipmentId,
          slipId: 'slip-001',
          consignor: { id: 'consignor-1', name: '発荷主A' },
          consignee: { id: 'consignee-1', name: '着荷主A' },
          originSpotId: 'spot-origin-1',
          destinationSpotId: 'spot-dest-1',
        },
      ]);

      // 同じIDで再度保存しようとする
      await expect(
        shipmentRepository.save('test-org-1', [
          {
            id: shipmentId,
            slipId: 'slip-002',
            consignor: { id: 'consignor-2', name: '発荷主B' },
            consignee: { id: 'consignee-2', name: '着荷主B' },
            originSpotId: 'spot-origin-2',
            destinationSpotId: 'spot-dest-2',
          },
        ])
      ).rejects.toThrow(new ShipmentConflictException('指定されたIDは既に存在します。'));
    });

    it('slip_idとorganization_idがコンフリクトした場合はShipmentConflictExceptionをスローする', async () => {
      // 最初の保存
      await shipmentRepository.save('test-org-1', [
        {
          id: 'shipment-003',
          slipId: 'slip-duplicate-001',
          consignor: { id: 'consignor-1', name: '発荷主A' },
          consignee: { id: 'consignee-1', name: '着荷主A' },
          originSpotId: 'spot-origin-1',
          destinationSpotId: 'spot-dest-1',
        },
      ]);

      // 同じslip_idとorganization_idで再度保存しようとする
      await expect(
        shipmentRepository.save('test-org-1', [
          {
            id: 'shipment-004',
            slipId: 'slip-duplicate-001',
            consignor: { id: 'consignor-2', name: '発荷主B' },
            consignee: { id: 'consignee-2', name: '着荷主B' },
            originSpotId: 'spot-origin-2',
            destinationSpotId: 'spot-dest-2',
          },
        ])
      ).rejects.toThrow(new ShipmentConflictException('指定された伝票IDと組織IDの組み合わせは既に存在します。'));
    });

    it('データベースエラー時はShipmentSaveExceptionをスローする', async () => {
      // ShipmentDAOのsaveメソッドをモック化して、データベースエラーをシミュレート
      const originalSave = ShipmentDAO.prototype.save;
      ShipmentDAO.prototype.save = jest.fn().mockRejectedValue(
        Object.assign(new Error('Database connection error'), { code: '08006' })
      );

      await expect(
        shipmentRepository.save('test-org-1', [
          {
            id: 'shipment-005',
            slipId: 'slip-005',
            consignor: { id: 'consignor-1', name: '発荷主A' },
            consignee: { id: 'consignee-1', name: '着荷主A' },
            originSpotId: 'spot-origin-1',
            destinationSpotId: 'spot-dest-1',
          },
        ])
      ).rejects.toThrow(ShipmentSaveException);

      // モックを元に戻す
      ShipmentDAO.prototype.save = originalSave;
    });
  });

  afterEach(() => {
    rdb.destroy();
  });
});
