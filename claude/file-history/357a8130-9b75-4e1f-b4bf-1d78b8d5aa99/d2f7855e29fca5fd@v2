import { ErrorCode } from '@app/errors';
import { ShipmentConflictException } from '../shipmentConflictException';

describe('ShipmentConflictException', () => {
  it('正しいメッセージとエラーコードで例外を作成できる', () => {
    const message = '指定されたIDは既に存在します。';
    const exception = new ShipmentConflictException(message);

    expect(exception.message).toBe(message);
    expect(exception.errorCode).toBe(ErrorCode.RESOURCE_CONFLICT);
  });

  it('カスタムメッセージを設定できる', () => {
    const customMessage = 'カスタムエラーメッセージ';
    const exception = new ShipmentConflictException(customMessage);

    expect(exception.message).toBe(customMessage);
  });
});
