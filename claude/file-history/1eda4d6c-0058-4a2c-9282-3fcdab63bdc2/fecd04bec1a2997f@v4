import * as esbuild from 'esbuild';

await esbuild.build({
  entryPoints: ['src/app/vercel.ts'],
  bundle: true,
  platform: 'node',
  target: 'node18',
  outfile: 'api/index.js',
  format: 'cjs',
  external: [
    '@prisma/client',
    'bcrypt',
  ],
});

console.log('Build completed: api/index.js');
