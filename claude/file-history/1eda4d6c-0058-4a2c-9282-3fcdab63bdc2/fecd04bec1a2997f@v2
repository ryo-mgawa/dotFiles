import * as esbuild from 'esbuild';

await esbuild.build({
  entryPoints: ['src/app/server.ts'],
  bundle: true,
  platform: 'node',
  target: 'node18',
  outfile: 'api/index.js',
  format: 'esm',
  external: [
    '@prisma/client',
    'bcrypt',
  ],
  banner: {
    js: `import { createRequire } from 'module'; const require = createRequire(import.meta.url);`,
  },
});

console.log('Build completed: api/index.js');
